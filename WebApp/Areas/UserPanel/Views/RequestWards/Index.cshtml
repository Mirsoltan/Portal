@model IEnumerable<Entities.HelpDesk.RequestWard>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestStatusType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestPriorityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DemanderWard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecepterWard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentRequestWardID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRefered)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestStatusType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestPriorityType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DemanderWard.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecepterWard.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentRequestWardID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRefered)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RequestWardID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RequestWardID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RequestWardID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
