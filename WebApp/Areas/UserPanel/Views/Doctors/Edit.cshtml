@model Entities.HISEntities.PractitionerEntity.Doctors

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Edit</h1>

<h4>Doctors</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorsID" />
            <div class="form-group">
                <label asp-for="PractitionerSpeciality" class="control-label"></label>
                <select asp-for="PractitionerSpeciality" asp-items="Html.GetEnumSelectList<Entities.HISEntities.PractitionerEntity.PractitionerSpeciality>().ToList()" class="form-control"></select>
                <span asp-validation-for="PractitionerSpeciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PractitionerJobCategory" class="control-label"></label>
                <select asp-for="PractitionerJobCategory" asp-items="Html.GetEnumSelectList<Entities.HISEntities.PractitionerEntity.PractitionerJobCategory>().ToList()" class="form-control"></select>
                <span asp-validation-for="PractitionerJobCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Entities.Person.GenderType>().ToList()" class="form-control"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterationNo" class="control-label"></label>
                <input asp-for="RegisterationNo" class="form-control" />
                <span asp-validation-for="RegisterationNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
