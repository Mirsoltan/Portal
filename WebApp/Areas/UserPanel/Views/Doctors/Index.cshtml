        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PractitionerSpeciality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PractitionerJobCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterationNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DoctorsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DoctorsID">Details</a> |
