@model ViewModels.HomeViewModels.LocalApplicationsIndexedViewModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Create</h1>

<h4>LocalApplications</h4>
<hr />

<div class="container-fluid">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="col col-lg-5 col-md-7 col-sm-12">
                <div class="row">
                    <div class="col col-lg-12  col-sm-12  col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        افزودن تصویر
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <div class="col-md-12 text-center">
                                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                                    <div class="fileinput-new thumbnail" style="height: 150px;">
                                                        <img src="/images/No_Image_Available.jpg" />
                                                    </div>
                                                    <div class="fileinput-preview fileinput-exists thumbnail" style="height:200px"> </div>
                                                    <div>
                                                        <span class="btn default btn-file">
                                                            <span class="fileinput-new btn btn-success"> انتخاب کنید </span>
                                                            <span class="fileinput-exists btn btn-default"> تغییر عکس </span>
                                                            <input type="file" asp-for="File" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                                        </span>
                                                        <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-lg-7 col-md-7 col-sm-12">
                @*<div class="row">*@
                <div class="col col-lg-12  col-sm-12  col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="direction:ltr">
                                <label asp-for="ApplicationPath" class="control-label"></label>
                                <input asp-for="ApplicationPath" class="form-control" />
                                <span asp-validation-for="ApplicationPath" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input ml-5" asp-for="IsLocalApp" /> @Html.DisplayNameFor(model => model.IsLocalApp)
                                </label>
                            </div>

                        </div>
                        <div class="form-group ">
                            <input type="submit" value="ایجاد" class="btn btn-primary float-left ml-3" />
                        </div>
                    </div>

                </div>
                @*</div>*@

            </div>


        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
